generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ApiLog {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  method       String
  path         String
  statusCode   Int?
  durationMs   Int?
  requestId    String?
  ip           String?
  userAgent    String?
  headers      Json?
  query        Json?
  requestBody  Json?
  responseBody Json?
  error        Json?
}

